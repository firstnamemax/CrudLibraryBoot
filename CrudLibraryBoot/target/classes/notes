CREATE TABLE Person(
                       person_id INT GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
                       name VARCHAR(100) NOT NULL UNIQUE,
                       year INT CHECK (year > 1900) NOT NULL
);

CREATE TABLE Book(
                     bookID INT GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
                     person INT REFERENCES Person(person_id) ON DELETE SET NULL,
                     title VARCHAR(300) NOT NULL,
                     author VARCHAR(200) NOT NULL,
                     year INT CHECK (Book.year > 1700)
);

ALTER TABLE book ADD COLUMN taken_at TIMESTAMP;